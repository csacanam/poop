# Backend API URL
NEXT_PUBLIC_BACKEND_URL=your_backend_url

# Privy App ID for email login
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id

# Self Verification Configuration
# The endpoint must be the FULL URL to your backend verification endpoint
# Example: https://your-backend.com/api/self/verify
# This endpoint must be publicly accessible (Self's relayers need to POST to it)
NEXT_PUBLIC_SELF_APP_NAME=POOP
# SCOPE must match the backend SELF_SCOPE (default: "poop-verification")
NEXT_PUBLIC_SELF_SCOPE=poop-verification
NEXT_PUBLIC_SELF_ENDPOINT=https://your-backend.com/api/self/verify
# ENDPOINT_TYPE: Use "https" for backend-only verification (no blockchain)
# Or use "staging_celo"/"production_celo" if you need blockchain integration
# The proof-of-human example uses "https" for backend-only verification
NEXT_PUBLIC_SELF_ENDPOINT_TYPE=https

